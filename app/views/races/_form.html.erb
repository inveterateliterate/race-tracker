<%= simple_form_for @race do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :user_id, value: @user.id %>

  <div>
    <%= f.input :name %>
    <%= f.input :date, as: :string %>
    <%= f.input :distance, as: :select, collection: Race::RaceTypes::ALL.map { |type| [type[:name].capitalize, type[:distance]] } %>
  </div>

  <div>
    <%= f.simple_fields_for :hash_tags do |h| %>
      <%= h.input :tag %>
    <% end %>
  </div>

  <div>
    <%= f.button :submit %>
  </div>
<% end %>
